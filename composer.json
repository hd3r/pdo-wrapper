{
    "name": "hd3r/pdo-wrapper",
    "description": "A lightweight PDO wrapper with query builder for MySQL, PostgreSQL and SQLite",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "hd3r"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "PdoWrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PdoWrapper\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
