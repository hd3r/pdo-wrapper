{
  "name": "hd3r/pdo-wrapper",
  "description": "A lightweight PDO wrapper with fluent query builder and CRUD methods for MySQL, PostgreSQL and SQLite",
  "keywords": ["mysql", "mariadb", "php", "postgres", "crud", "database", "pdo", "sqlite", "query-builder", "pdo-wrapper"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "hd3r",
      "homepage": "https://github.com/hd3r"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "Hd3r\\PdoWrapper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hd3r\\PdoWrapper\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:sqlite": "vendor/bin/phpunit --exclude-group mysql,postgres",
    "test:unit": "vendor/bin/phpunit --testsuite Unit",
    "test:integration": "vendor/bin/phpunit --testsuite Integration",
    "test:feature": "vendor/bin/phpunit --testsuite Feature",
    "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
    "analyse": "vendor/bin/phpstan analyse",
    "cs": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "cs:fix": "vendor/bin/php-cs-fixer fix",
    "ci": ["@cs", "@analyse", "@test:sqlite"]
  }
}
