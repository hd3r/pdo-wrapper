{
    "name": "hd3r/pdo-wrapper",
    "description": "A lightweight PDO wrapper with fluent query builder and CRUD methods for MySQL, PostgreSQL and SQLite",
    "keywords": ["mysql", "php", "postgres", "crud", "database", "pdo", "sqlite", "query-builder", "pdo-wrapper"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "hd3r"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Hd3r\\PdoWrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hd3r\\PdoWrapper\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:feature": "phpunit --testsuite Feature",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
